@page
@model IndexModel
@{
	ViewData["Title"] = "Home page";
}

<div class="text-center">
	<h1 class="display-4">Welcome</h1>
	<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div>
	<h1>Add Person</h1>

	<form method="post">
		<div class="form-group">
			<label asp-for="Person.Name"></label>
			<input asp-for="Person.Name" class="form-control" />
			<span asp-validation-for="Person.Name" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Person.DateOfBirth"></label>
			<input asp-for="Person.DateOfBirth" type="date" class="form-control" />
			<span asp-validation-for="Person.DateOfBirth" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Person.TelephoneNumber"></label>
			<input asp-for="Person.TelephoneNumber" class="form-control" />
			<span asp-validation-for="Person.TelephoneNumber" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Person.Email"></label>
			<input asp-for="Person.Email" class="form-control" />
			<span asp-validation-for="Person.Email" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary">Add Person</button>
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	</form>
</div>

